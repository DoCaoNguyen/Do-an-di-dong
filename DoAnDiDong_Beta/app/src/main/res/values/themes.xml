<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Social" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/theme</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast">false</item>

    </style>

    <style name="Theme.Social" parent="Base.Theme.Social" />

    <style name="Theme.Social.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/theme</item>
        <item name = "windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Social</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme</item>
        <item name="android:colorAccent">@color/theme</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>
    </style>

    <style name="DialogButtonStyled" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/theme</item>
    </style>

    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/theme2</item>
    </style>


</resources>